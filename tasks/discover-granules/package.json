{
  "name": "@cumulus/discover-granules",
  "version": "1.13.3",
  "description": "Discover Granules in FTP/HTTP/HTTPS/SFTP/S3 endpoints",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "homepage": "https://github.com/nasa/cumulus/tree/master/tasks/discover-granules",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/cumulus"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "test": "ava",
    "test-coverage": "nyc ava",
    "local": "node index.js | pino",
    "build": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack",
    "watch": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress -w",
    "prepare": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": "tests",
    "color": false
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "@cumulus/common": "1.13.3",
    "@cumulus/cumulus-message-adapter-js": "^1.0.7",
    "@cumulus/ingest": "1.13.3",
    "@cumulus/test-data": "1.13.3",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "fs-extra": "^5.0.0",
    "nyc": "^14.0.0",
    "webpack": "~4.5.0",
    "webpack-cli": "~2.0.14"
  }
}
